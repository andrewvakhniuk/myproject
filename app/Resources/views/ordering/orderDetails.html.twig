{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <style>
        body{
            background-color: lightgray;
        }
        #greetings {
            margin: 20px;
        }

        .center {
            margin: auto;
            text-align: center;
        }

        #container {
            background-color: white;
            display:table;
            width: 90%;
            margin: auto;
            /*margin-top: 10px;*/
            -webkit-box-shadow: 0px 0px 5px black;
            -moz-box-shadow: 0px 0px 5px black;
            box-shadow: 0px 0px 5px black;
        }

        #container table {

            margin: auto;
            width: 80%;
        }

        #head {
            margin-top: 10px;

            width: 100%;
            height: 80px;
            background-color: #007bff;
            /*opacity: 0.9;*/
        }

        #head a h1 {

            color: white;
            /*font-size: 15px;*/
            /*font-weight: 500;*/
            text-align: center;
            padding-top: 15px;
        }

        #footer {
            /*left:45%;*/
            display:flex;
            position:relative;
            /*margin-top: 50px;*/
            bottom:0px;
            width: 100%;
            height: 80px;
            background-color: grey;
            /*opacity: 0.9;*/
            color: white;
        }
        @media (max-width: 600px) {
            #container {
                width: 100%;
            }
            #container table {
                width: 100%;
            }
        }

    </style>
{% endblock %}
{% block body %}


    <div id="container">
        <div id="head">
            <a href="{{ path('homepage') }}">
                <h1>
                    <-   Іграшка Toroflux
                </h1>
            </a>
        </div>
        <div id="body">

            <div id="greetings" class="center">
                {{ ordering.name }} {{ ordering.surname }},
                {{ 'greetings'|trans|raw }}
            </div>

            <table class="table">
                <thead>
                <tr>
                    <th colspan="2">{{ 'your.order.details'|trans|raw }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th>
                        {{ 'order.id'|trans|raw }}
                    </th>
                    <td>
                        495{{ ordering.id }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ 'quantity'|trans|raw }}
                    </th>
                    <td>
                        {{ ordering.quantity }}
                    </td>
                </tr>
                {% if ordering.deliveryType == 'by_post' %}
                    <tr>
                        <th>
                            {{ 'payment_method'|trans|raw }}
                        </th>
                        <td>
                            {{ ("payment_method."~ordering.paymentMethod)|trans|raw }}
                            {% if ordering.paymentMethod == 'by_card' %}
                                <b>{{ ordering.price }} UAH</b>
                                <br>
                                {{ 'your.order.will.be.started.right.after.you.purchase.money.on.card'|trans|raw }}
                                <br>
                                {{ 'credit_card.number'|trans|raw }}
                                <br>
                                {{ 'credit_card.description'|trans|raw }}
                            {% endif %}
                        </td>
                    </tr>
                {% endif %}
                <tr>
                    <th>
                        {{ 'delivery.type'|trans|raw }}
                    </th>
                    <td>
                        {{ ('delivery.'~ordering.deliveryType)|trans|raw }}
                        <br>
                        {% if ordering.deliveryType == "by_post" %}
                            {{ 'post.office'|trans|raw }}: {{ ordering.city }}, {{ ordering.postOffice }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ 'total.price'|trans|raw }}
                    </th>
                    <td>
                        <b style="font-size: large"> {{ ordering.price }} UAH </b>
                    </td>
                </tr>
                {% if ordering.deliveryType == "by_post" %}
                    <tr>
                        <th>
                            {{ 'price.description'|trans|raw }}
                        </th>
                        <td>
                            {{ 'price.for.delivery.service'|trans|raw }}
                            {% if ordering.paymentMethod =="after_delivery" %}
                                <br>
                                {{ 'price.for.payment.after_delivery'|trans|raw }}
                            {% endif %}
                        </td>
                    </tr>
                {% endif %}

                </tbody>
            </table>

            <hr>

            <div class="center">
                {{ 'best.regards'|trans|raw }}
            </div>

        </div>
        <div style="margin:10px;margin-top:30px;" class="center">
            <button id="trigger-modal-button" style="width:80%;margin:0 auto;" class="btn btn-default btn-lg" data-toggle="modal" data-target="#my-modal">{{ 'save'|trans|raw }}</button>
        </div>


        <div id="footer">
            <div class="center">
                {{ 'contact'|trans|raw }}:
                <br>
                {{ 'phone.number1'|trans|raw }}
                <br>
                {{ 'email1'|trans|raw }}
                <br>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="my-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">{{ 'send.details.to.email'|trans|raw }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form_start(sendMailForm) }}
                    {{ form_widget(sendMailForm) }}
                    <button type="submit" class="btn btn-primary" >{{ 'send'|trans }}</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'cancel'|trans|raw }}</button>

                    {{ form_end(sendMailForm) }}

                </div>

            </div>
        </div>
    </div>

    {#--- END MODAL#}

    <script>
        $('#container').css({'min-height': window.innerHeight});

        // var $triggerModalButton = $('#trigger-modal-button');
        // var $modal = $('#my-modal');
        // $triggerModalButton.onclick(function () {
        //    $modal.modal('show');
        // });
    </script>
{% endblock %}