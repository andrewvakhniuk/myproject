{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <style>
        #greetings{
            margin:20px;
        }
        .center{
            margin:auto;
            text-align: center;
        }
        #container{
            width:90%;
            margin:auto;
            margin-top: 10px;
            -webkit-box-shadow: 0px 0px 5px black;
            -moz-box-shadow:  0px 0px 5px black;
            box-shadow:  0px 0px 5px black;
        }
        #container table{

            margin:auto;
            width:80%;
        }
        #head {
            width: 100%;
            height: 80px;
            background-color: black;
            opacity: 0.8;
        }

        #head a  h1 {
            color: white;
            /*font-size: 15px;*/
            /*font-weight: 500;*/
            text-align: center;
            padding-top:15px;
        }
        #footer{
            margin-top:20px;
            width: 100%;
            height: 80px;
            background-color: black;
            opacity: 0.8;
            color: white;
        }
    </style>
{% endblock %}
{% block body %}


    <div id="container">
        <div id="head">
            <a href="{{ path('homepage') }}">
                <h1>
                    Іграшка Toroflux
                </h1>
            </a>
        </div>
        <div id="body">

            <div id="greetings" class="center" >
                {{ ordering.name }} {{ ordering.surname }},
                {{ 'greetings'|trans|raw }}
            </div>
            <table class="table">
                <thead>
                <tr>
                    <th colspan="2">{{ 'your.order.details'|trans|raw }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th>
                        {{ 'order.id'|trans|raw }}
                    </th>
                    <td>
                       495{{ ordering.id }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ 'quantity'|trans|raw }}
                    </th>
                    <td>
                        {{ ordering.quantity }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ 'payment_method'|trans|raw }}
                    </th>
                    <td>
                        {{ ("payment_method."~ordering.paymentMethod)|trans|raw }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ 'delivery.type'|trans|raw }}
                    </th>
                    <td>
                        {{ ('delivery.'~ordering.deliveryType)|trans|raw }}
                        <br>
                        {% if ordering.deliveryType == "by_post" %}
                            {{ 'post.office'|trans|raw }}: {{ ordering.city }}, {{ ordering.postOffice }}
                        {% endif %}
                    </td>
                </tr>

                {% if ordering.deliveryType == "by_post" %}
                    <tr>
                        <th>
                            {{ 'price.description'|trans|raw }}
                        </th>
                        <td>
                            {{ 'price.for.delivery.service'|trans|raw }} : 35 UAH
                            {% if ordering.paymentMethod =="after_delivery" %}
                                <br>
                                {{ 'price.for.payment.after_delivery'|trans }} : 30 UAH
                            {% endif %}
                        </td>
                    </tr>
                {% endif %}
                <tr>
                    <th>
                        {{ 'total.price'|trans|raw }}
                    </th>
                    <td>
                        <b style="font-size: large"> {{ ordering.price }} UAH </b>
                    </td>
                </tr>
                </tbody>
            </table>

            <hr>

            <div class="center">
                {% if ordering.deliveryType == "self_checkout" %}
                    {{ 'you.can.take.your.order.from'|trans|raw }}
                    {{ 'location.description'|trans|raw }}
                    <br>
                    <hr>
                {% endif %}
                {% if ordering.paymentMethod=="by_card" %}
                    {{ 'your.order.will.be.started.right.after.you.purchase.money.on.card'|trans|raw }}
                    <br>
                    {{ 'credit_card.number'|trans|raw }}
                    <br>
                    {{ 'credit_card.description'|trans|raw }}
                    <hr>
                {% endif %}

                {{ 'best.regards'|trans|raw }}

            </div>
        </div>
        <div id="footer">
            <div class="center">
                {{ 'contact'|trans|raw }}:
                <br>
                {{ 'phone.number1'|trans|raw }}
                <br>
                {{ 'email1'|trans|raw }}
                <br>
            </div>
        </div>
    </div>
    
{% endblock %}