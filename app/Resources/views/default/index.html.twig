{% extends 'base.html.twig' %}

{% block outerbody %}

    <div id="fb-root"></div>
    <script>(function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s);
            js.id = id;
            js.src = 'https://connect.facebook.net/uk_UA/sdk.js#xfbml=1&version=v2.12&appId=1062385993857234&autoLogAppEvents=1';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <!-- Start Header -->
    <header id="mu-header" class="" role="banner">
        <div id="header-video"></div>
        {#<iframe id="header-video" class="mu-video-iframe" width="854" height="480"#}
        {#src="https://www.youtube.com/embed/QuUZLe5BWXk?autoplay=1&controls=0&disablekb=1&fs=0&iv_load_policy=3&loop=1&modestbranding=1" frameborder="0" allowfullscreen volume="0"></iframe>#}
        <div class="mu-header-overlay">
            <div>
                <div class="mu-header-area">

                    <!-- Start header featured area -->
                    <div class="mu-header-featured-area">
                        {#<div class="mu-header-featured-img">#}
                        {#<img src="{{ asset('assets/images/iphone.png') }}" alt="iphone image">#}
                        {#</div>#}

                        <div class="mu-header-featured-content">
                            <h1>{{ 'header.header'|trans|raw }}</h1>
                            {#<p>{{ 'header.body'|trans|raw }}</p>#}

                            {#<div class="mu-app-download-area">#}
                            {#<h4>{{ 'make.an.order'|trans|raw }}</h4>#}
                            {#<a class="mu-apple-btn scroll-to-order" href="#"><span>{{ 'order'|trans|raw }}</span></a>#}
                            {#</div>#}

                        </div>
                    </div>
                    <!-- End header featured area -->

                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->

    <!-- Start Menu -->
    <button class="mu-menu-btn scroll-to-order">
        {{ 'order'|trans|raw }}
    </button>
    {#<div class="mu-menu-full-overlay">#}
    {#<div class="mu-menu-full-overlay-inner">#}
    {#<a class="mu-menu-close-btn" href="#"><span class="mu-line"></span></a>#}
    {#<nav class="mu-menu" role="navigation">#}
    {#<ul>#}
    {#<li><a href="#mu-header">Header</a></li>#}
    {#<li><a href="#mu-feature">App Feature</a></li>#}
    {#<li><a href="#mu-video">Promo Video</a></li>#}
    {#<li><a href="#mu-apps-screenshot">Apps Screenshot</a></li>#}
    {#<li><a href="#mu-download">Download</a></li>#}
    {#<li><a href="#mu-faq">FAQ</a></li>#}
    {#<li><a href="#mu-contact">Get In Touch</a></li>#}
    {#</ul>#}
    {#</nav>#}
    {#</div>#}
    {#</div>#}
    <!-- End Menu -->



    <!-- Start main content -->

    <main role="main">

        <!-- Start Order-->
        <div class="container">
            <div class="row">
                <div id="order-container" class="col-md-12">
                    <br>
                    <br>
                    <br>
                    <br>

                    <div class="mu-title-area">
                        <h2 id="order-header" class="mu-title">{{ 'order.header'|trans|raw }}</h2>
                        <span class="mu-title-dot"></span>
                        <p>
                            <img style="width: 50px;"
                                 src="http://files.adme.ua/files/news/part_12/128027/preview-170x138.jpg">
                            {{ 'order.description'|trans|raw }}
                        </p>
                    </div>
                    <div class="mu-faq-content">
                        <div class="form-border">
                            {{ form_start(form,{'attr':{'id':'order-form'}}) }}
                            <div class="form-group row">
                                {{ form_label(form.name,null,{'label_attr':{'class':"col-sm-2 col-form-label col-form-label-sm"}}) }}
                                <div class="col-sm-10 ">
                                    {{ form_errors(form.name) }}
                                    {{ form_widget(form.name,{'attr':{'class':'check-error'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.phone,null,{'label_attr':{'class':"col-sm-2 col-form-label col-form-label-sm"}}) }}
                                <div class="col-sm-10 ">
                                    {{ form_errors(form.phone) }}
                                    {{ form_widget(form.phone,{'attr':{'minLength':'10','maxLength':'10','class':'check-error'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.quantity,null,{'label_attr':{'class':"col-sm-2 col-form-label col-form-label-sm"}}) }}
                                <div class="col-sm-10">
                                    {{ form_errors(form.quantity) }}
                                    {{ form_widget(form.quantity,{'attr':{'type':'number','min':'1','max':'10','step':'1','class':'check-error'},'type':'number'}) }}
                                </div>
                            </div>
                            {#//--price#}

                            <div style="text-align: center;margin: auto;width:100%; margin:10px;" class="form-group row">
                                <div  class="price col-sm-2 col-form-label"
                                     style="text-align: center;display: inline-flex;margin:5px; white-space: nowrap; width:100%;">
                                    <h4 id="price"  style="text-align: center;margin: auto;"></h4>
                                </div>
                            </div>

                            {{ form_widget(form.deliveryType) }}
                            {{ form_widget(form.paymentMethod) }}

                            <div class="form-group row">
                                <button style="width:80%;background-color:#c82333;color:white;" id="submit-order-button" class="btn btn-danger btn-lg">
                                    {{ 'order'|trans|raw }}
                                </button>
                                {#<div style="margin:auto;" class="submit-button round col-sm-10">#}
                                {#<a  id="submit-order-button" class="button" href="#">{{ 'order'|trans|raw }}</a>#}
                                {#</div>#}
                            </div>
                            <div>
                                <input type="submit" style="display: none">
                            </div>
                            <div style="font-size: 8px;color:grey;">
                                {{ 'data.usage'|trans|raw }}
                            </div>

                            {{ form_widget(form._token) }}
                            {{ form_end(form, {'render_rest': false}) }}
                            {#<p>{{ 'features.description'|trans|raw }}</p>#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {#-- End ORDER -- #}
        <br>
        <br>
        <br>
        <hr>
        <!-- Start Feature -->
        <section id="mu-feature">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-feature-area">

                            <div class="mu-title-area">
                                <h2 class="mu-title">{{ 'features.header'|trans|raw }}</h2>
                                <span class="mu-title-dot"></span>
                                {#<p>{{ 'features.description'|trans|raw }}</p>#}
                            </div>

                            <!-- Start Feature Content -->
                            <div class="mu-feature-content" style="margin-top:-20px">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mu-feature-content-left">
                                            <img class="mu-profile-img"
                                                 src="{{ asset('assets/images/features.jpg') }}" alt="iphone Image">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mu-feature-content-right">

                                            {% for i in 1..7 %}
                                                <!-- Start single feature item -->
                                                <div class="media">
                                                    <div class="media-body">
                                                        <h3 class="media-heading">{{ ('features.feature'~i~'.header')|trans|raw }}</h3>
                                                        <p>{{ ('features.feature'~i~'.description')|trans|raw }}</p>
                                                    </div>
                                                </div>
                                                <!-- End single feature item -->
                                            {% endfor %}

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- End Feature Content -->

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Feature -->

        <!-- Start Video -->
        <section id="mu-video">
            <div class="mu-video-overlay">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-video-area">
                                <h2>{{ 'watch.video'|trans|raw }}</h2>
                                <a class="mu-video-play-btn" href="#"><i class="fa fa-play" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Start Video content -->
            <div class="mu-video-content">
                <div class="mu-video-iframe-area">
                    <a class="mu-video-close-btn" href="#"><i class="fa fa-times" aria-hidden="true"></i></a>
                    <iframe class="mu-video-iframe" width="854" height="480"
                            src="https://www.youtube.com/embed/QuUZLe5BWXk" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
            <!-- End Video content -->

        </section>
        <!-- End Video -->

        <!-- Start Galery -->
        <section id="mu-apps-screenshot">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-apps-screenshot-area">

                            <div class="mu-title-area">
                                <h2 class="mu-title">{{ 'galery.header'|trans|raw }}</h2>
                                <span class="mu-title-dot"></span>
                                <p>{{ 'galery.description'|trans|raw }}</p>
                            </div>


                            <!-- Start Galery Content -->
                            <div class="mu-apps-screenshot-content">

                                <div class="mu-apps-screenshot-slider">

                                    {% for i in 1..4 %}
                                        <div class="mu-single-screeshot">
                                            <img style="width: 80%;"
                                                 src="{{ asset('assets/images/screenshot/0'~i~'.jpg') }}"
                                                 alt="App screenshot img">
                                        </div>
                                    {% endfor %}

                                </div>

                            </div>
                            <!-- End Galery Content -->

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Galery -->

        <!-- Start Description -->
        <section id="mu-download">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-download-area">

                            <div class="mu-title-area">
                                <h2 class="mu-title">{{ 'description.header'|trans|raw }}</h2>
                                <span class="mu-title-dot"></span>
                                <p>{{ 'description.description'|trans|raw }}</p>
                            </div>


                            <div class="mu-download-content">
                                <a class="mu-apple-btn scroll-to-order" href="#">
                                    <div class="fa "></div>
                                    <span>{{ 'order'|trans|raw }}</span></a>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Description -->


        <!-- START Opinions -->
        <div id="mu-opinions">
            <div class="container">
                <div class="row ">
                    <div>
                        <div id="mu-opinions-block" class="mu-title-area" style="padding-top:70px">
                            <h2 class="mu-title">{{ 'opinions.header'|trans|raw }}</h2>
                            <span class="mu-title-dot"></span>
                            <p>{{ 'opinions.description'|trans|raw }}</p>
                        </div>
                    </div>
                    <br>
                    <br>
                    <div>

                        <div class="opinions" style="margin-top:50px;">
                            {% for i in 1..3 %}
                                <div>
                                    <img class="opinion-image"
                                         src="{{ asset('assets/images/opinions/0'~i~'.png') }}">
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END Opinions -->

        <!-- Start FAQ -->
        <section id="mu-faq">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-faq-area">

                            <div class="mu-title-area">
                                <h2 class="mu-title">FAQ</h2>
                                <span class="mu-title-dot"></span>
                            </div>


                            <div class="mu-faq-content">

                                <div class="panel-group" id="accordion">
                                    {% for i in 1..5 %}
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h4 class="panel-title">
                                                    <a data-toggle="collapse" data-parent="#accordion"
                                                       href="#collapse{{ i }}">
                                                        <span class="fa fa-plus"></span>{{ ('faq.'~i~'.header')|trans|raw }}
                                                    </a>
                                                </h4>
                                            </div>
                                            <div id="collapse{{ i }}" class="panel-collapse collapse ">
                                                <div class="panel-body">
                                                    {{ ('faq.'~i~'.answer')|trans|raw }}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End FAQ -->


        <!-- Start Contact -->
        <section id="mu-contact">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-contact-area">

                            <div class="mu-title-area">
                                <h2 class="mu-heading-title">{{ 'contact'|trans|raw }}</h2>
                                <span class="mu-title-dot"></span>
                                <p>{{ 'contact.description'|trans|raw }}</p>
                            </div>


                            <!-- Start Contact Content -->
                            <div class="mu-contact-content">
                                <div class="row">

                                    <div class="col-md-7">
                                        <div class="mu-contact-left">
                                            <div id="form-messages"></div>
                                            <form
                                                    id="ajax-contact"
                                                    method="post" action="{{ path('ordering_message_ajax') }}"
                                                    class="mu-contact-form">
                                                <div class="form-group">
                                                    <input type="text" class="form-control"
                                                           placeholder="{{ 'name'|trans|raw }}" id="name"
                                                           name="name" required>
                                                </div>
                                                <div class="form-group">
                                                    <input type="email" class="form-control"
                                                           placeholder="{{ 'email'|trans|raw }}"
                                                           id="email" name="email" required>
                                                </div>
                                                <div class="form-group">
                                                    <textarea class="form-control" placeholder="{{ 'message'|trans|raw }}"
                                                              id="message"
                                                              name="message" required></textarea>
                                                </div>
                                                <button type="submit" class="mu-send-msg-btn">
                                                    <span>{{ 'send'|trans|raw }}</span>
                                                </button>
                                            </form>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <div class="mu-contact-right">
                                            <div class="mu-contact-right-single">
                                                <div class="mu-icon"><i class="fa fa-map-marker"></i></div>
                                                <p><strong>{{ 'location'|trans|raw }}</strong></p>
                                                <p>{{ 'location.description'|trans|raw }}</p>
                                            </div>

                                            <div class="mu-contact-right-single">
                                                <div class="mu-icon"><i class="fa fa-phone"></i></div>
                                                <p><strong>{{ 'phone'|trans|raw }}</strong></p>
                                                <p>{{ 'phone.number1'|trans|raw }}</p>
                                                {#<p>{{ 'phone.number2'|trans|raw }}</p>#}
                                            </div>

                                            <div class="mu-contact-right-single">
                                                <div class="mu-icon"><i class="fa fa-envelope"></i></div>
                                                <p><strong>{{ 'email'|trans|raw }}</strong></p>
                                                <p>{{ 'email1'|trans|raw }}</p>
                                                {#<p>{{ 'email2'|trans|raw }}</p>#}
                                            </div>

                                            <div class="mu-contact-right-single">
                                                <div class="mu-social-media">
                                                    <a href="{{ 'contact.facebook'|trans|raw }}"><i
                                                                class="fa fa-facebook"></i></a>
                                                    <a href="{{ 'contact.instagram'|trans|raw }}"><i
                                                                class="fa fa-instagram"></i></a>
                                                    {#<a href="#"><i class="fa fa-google-plus"></i></a>#}
                                                    {#<a href="#"><i class="fa fa-linkedin"></i></a>#}
                                                    {#<a href="#"><i class="fa fa-youtube"></i></a>#}
                                                </div>
                                            </div>

                                            <br>
                                            {#vk share button#}
                                            <script type="text/javascript">
                                                document.write(VK.Share.button('http://www.inplay.com.ua'));
                                            </script>
                                            <br>
                                            {#fb share button#}
                                            <div class="fb-like" data-href="http://inplay.com.ua"
                                                 data-width="100" data-layout="standard" data-action="like"
                                                 data-size="small" data-show-faces="true" data-share="true">

                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- End Contact Content -->

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Contact -->

    </main>


    <!-- End main content -->


    <!-- Start footer -->
    <footer id="mu-footer" role="contentinfo">
        {#<div class="container">#}
        <div class="mu-footer-area">
            <p style="font-size: 8px;" class="mu-copy-right">&copy; Copyright <a rel="nofollow" href="http://markups.io">markups.io</a>. All
                right reserved.</p>
        </div>
        {#</div>#}

    </footer>
    <!-- End footer -->



    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <!-- Bootstrap -->
    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    <!-- Slick slider -->
    <script type="text/javascript" src="{{ asset('assets/js/slick.min.js') }}"></script>


    <!-- Ajax contact form  -->
    <script type="text/javascript" src="{{ asset('assets/js/app.js') }}"></script>



    <!-- Custom js -->
    <script type="text/javascript" src="{{ asset('assets/js/custom.js') }}"></script>



{% endblock %}

