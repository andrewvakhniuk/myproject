{% extends 'base.html.twig' %}

{% block outerbody %}

    <!-- Start Header -->
    <header id="mu-header" class="" role="banner">
        <div id="header-video"></div>
        {#<iframe id="header-video" class="mu-video-iframe" width="854" height="480"#}
                {#src="https://www.youtube.com/embed/QuUZLe5BWXk?autoplay=1&controls=0&disablekb=1&fs=0&iv_load_policy=3&loop=1&modestbranding=1" frameborder="0" allowfullscreen volume="0"></iframe>#}
        <div class="mu-header-overlay">
            <div >
                <div class="mu-header-area">

                    <!-- Start header featured area -->
                    <div class="mu-header-featured-area">
                        {#<div class="mu-header-featured-img">#}
                        {#<img src="{{ asset('assets/images/iphone.png') }}" alt="iphone image">#}
                        {#</div>#}

                        <div class="mu-header-featured-content">
                            <h1>{{ 'header.header'|trans }}</h1>
                            {#<p>{{ 'header.body'|trans }}</p>#}

                            {#<div class="mu-app-download-area">#}
                                {#<h4>{{ 'make.an.order'|trans }}</h4>#}
                                {#<a class="mu-apple-btn scroll-to-order" href="#"><span>{{ 'order'|trans }}</span></a>#}
                            {#</div>#}

                        </div>
                    </div>
                    <!-- End header featured area -->

                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->

    <!-- Start Menu -->
    <button class="mu-menu-btn scroll-to-order">
        {{ 'order'|trans }}
    </button>
    {#<div class="mu-menu-full-overlay">#}
    {#<div class="mu-menu-full-overlay-inner">#}
    {#<a class="mu-menu-close-btn" href="#"><span class="mu-line"></span></a>#}
    {#<nav class="mu-menu" role="navigation">#}
    {#<ul>#}
    {#<li><a href="#mu-header">Header</a></li>#}
    {#<li><a href="#mu-feature">App Feature</a></li>#}
    {#<li><a href="#mu-video">Promo Video</a></li>#}
    {#<li><a href="#mu-apps-screenshot">Apps Screenshot</a></li>#}
    {#<li><a href="#mu-download">Download</a></li>#}
    {#<li><a href="#mu-faq">FAQ</a></li>#}
    {#<li><a href="#mu-contact">Get In Touch</a></li>#}
    {#</ul>#}
    {#</nav>#}
    {#</div>#}
    {#</div>#}
    <!-- End Menu -->



    <!-- Start main content -->

    <main role="main">

        <!-- Start Order-->
        <div class="container">
            <div class="row">
                <div id="order-container" class="col-md-12">
                    <br>
                    <br>
                    <br>
                    <br>

                    <div class="mu-title-area">
                        <h2 id="order-header" class="mu-title">{{ 'order.header'|trans }}</h2>
                        <span class="mu-title-dot"></span>
                        <p>
                            <img style="width: 50px;" src="http://files.adme.ua/files/news/part_12/128027/preview-170x138.jpg">
                            {{ 'order.description'|trans }}
                        </p>
                    </div>
                    <div class="mu-faq-content">
                        <div class="form-border">
                            {{ form_start(form,{'attr':{'id':'order-form'}}) }}

                            <div class="form-row ">
                                <div class="form-group col-md-6 ">
                                    {{ form_label(form.name) }}
                                    {{ form_errors(form.name) }}
                                    {{ form_widget(form.name) }}

                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_label(form.surname) }}
                                    {{ form_errors(form.surname) }}
                                    {{ form_widget(form.surname) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.phone,null,{'label_attr':{'class':"col-sm-2 col-form-label col-form-label-sm"}}) }}
                                <div class="col-sm-10 ">
                                    {{ form_errors(form.phone) }}
                                    {{ form_widget(form.phone,{'attr':{'minLength':'9','maxLength':'9'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.email,null,{'label_attr':{'class':"col-sm-2 col-form-label col-form-label-sm"}}) }}
                                <div class="col-sm-10">
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.quantity,null,{'label_attr':{'class':"col-sm-2 col-form-label col-form-label-sm"}}) }}
                                <div class="col-sm-10">
                                    {{ form_errors(form.quantity) }}
                                    {{ form_widget(form.quantity,{'attr':{'type':'number','min':'1','max':'10','step':'1'},'type':'number'}) }}
                                </div>
                            </div>
                            {#-----   payment method --- #}

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label col-form-label-sm">{{ 'payment_method'|trans }}</label>
                                <div class="col-sm-10">
                                    <div id="payment-method-radio-container" class="funkyradio">
                                        <div class="funkyradio-success">
                                            <input value="by_card" type="radio" name="radio-payment-method" id="by_card"
                                                   checked/>
                                            <label for="by_card">{{ 'payment_method.by_card'|trans }}</label>
                                        </div>
                                        <div class="funkyradio-success">
                                            <input value="after_delivery" type="radio" name="radio-payment-method"
                                                   id="after_delivery"/>
                                            <label for="after_delivery">{{ 'payment_method.after_delivery'|trans }}</label>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            {#----- END  payment method --- #}

                            {#-----   delivery type  --- #}

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label col-form-label-sm">{{ 'delivery.type'|trans }}</label>
                                <div class="col-sm-10">
                                    <div id="delivery-type-radio" class="funkyradio">
                                        <div class="funkyradio-success">
                                            <input value="self_checkout" type="radio" name="radio" id="self_checkout"
                                                   checked/>
                                            <label for="self_checkout">{{ 'delivery.self_checkout'|trans }}</label>
                                        </div>
                                        <div class="funkyradio-success">
                                            <input value="by_post" type="radio" name="radio" id="by_post"/>
                                            <label for="by_post">
                                                <img style="width: 30px;" src="http://files.adme.ua/files/news/part_12/128027/preview-170x138.jpg">
                                                {{ 'delivery.by_post'|trans }}
                                            </label>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            {#----- END  delivery type --- #}

                            {#// ---  address fields #}

                            {#--- by post fileds#}

                            <div class="delivery-fields" id="by_post_fields"
                                 style="display:none"
                            >
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label col-form-label-sm control-label required"
                                           for="appbundle_ordering_city">{{ 'city'|trans }}</label>
                                    <div class="col-sm-10">

                                        <select id="appbundle_ordering_city" name="appbundle_ordering[city]"
                                                placeholder="city" class="form-control"></select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label col-form-label-sm control-label required"
                                           for="appbundle_ordering_postOffice">{{ 'post.office'|trans }}</label>
                                    <div class="col-sm-10">

                                        <select id="appbundle_ordering_postOffice" name="appbundle_ordering[postOffice]"
                                                placeholder="post.office" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                            {##  END --- by post fileds#}

                            {#----self-checkout#}
                            <div class="delivery-fields" id="self_checkout_fields"
                                 style="display:none"
                            >
                                <p>{{ 'delivery.self_checkout.description'|trans }}</p>
                                <p> <span class="glyphicon glyphicon-map-marker"></span> {{ 'location.description'|trans }}
                                </p>
                            </div>

                            {#  -- END address fields#}
                            <div class="form-group row ">
                                <div class="price col-sm-2 col-form-label"
                                     style="display: inline-flex;margin-top:30px; white-space: nowrap;">
                                    <h4 id="price"></h4>
                                </div>
                                <div class="round col-sm-10">
                                    <a id="submit-order-button" class="button" href="#">{{ 'order'|trans }}</a>
                                </div>
                            </div>
                            <div>
                                <input type="submit" style="display: none">
                            </div>
                            <div style="font-size: 10px;color:grey;">
                                {{ 'data.usage'|trans }}
                            </div>
                            {# Token CSRF #}
                            {{ form_widget(form.deliveryType) }}
                            {{ form_widget(form.paymentMethod) }}
                            {{ form_widget(form.price) }}

                            {{ form_widget(form._token) }}
                            {{ form_end(form, {'render_rest': false}) }}
                            {#<p>{{ 'features.description'|trans }}</p>#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {#-- End ORDER -- #}
        <br>
        <br>
        <br>
        <hr>
        <!-- Start Feature -->
        <section id="mu-feature">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-feature-area">

                            <div class="mu-title-area">
                                <h2 class="mu-title">{{ 'features.header'|trans }}</h2>
                                <span class="mu-title-dot"></span>
                                {#<p>{{ 'features.description'|trans }}</p>#}
                            </div>

                            <!-- Start Feature Content -->
                            <div class="mu-feature-content" style="margin-top:-20px">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mu-feature-content-left">
                                            <img class="mu-profile-img"
                                                 src="{{ asset('assets/images/features.jpg') }}" alt="iphone Image">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mu-feature-content-right">

                                            {% for i in 1..7 %}
                                                <!-- Start single feature item -->
                                                <div class="media">
                                                    <div class="media-body">
                                                        <h3 class="media-heading">{{ ('features.feature'~i~'.header')|trans }}</h3>
                                                        <p>{{ ('features.feature'~i~'.description')|trans }}</p>
                                                    </div>
                                                </div>
                                                <!-- End single feature item -->
                                            {% endfor %}

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- End Feature Content -->

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Feature -->

        <!-- Start Video -->
        <section id="mu-video">
            <div class="mu-video-overlay">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-video-area">
                                <h2>{{ 'watch.video'|trans }}</h2>
                                <a class="mu-video-play-btn" href="#"><i class="fa fa-play" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Start Video content -->
            <div class="mu-video-content">
                <div class="mu-video-iframe-area">
                    <a class="mu-video-close-btn" href="#"><i class="fa fa-times" aria-hidden="true"></i></a>
                    <iframe class="mu-video-iframe" width="854" height="480"
                            src="https://www.youtube.com/embed/QuUZLe5BWXk" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
            <!-- End Video content -->

        </section>
        <!-- End Video -->

        <!-- Start Galery -->
        <section id="mu-apps-screenshot">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-apps-screenshot-area">

                            <div class="mu-title-area">
                                <h2 class="mu-title">{{ 'galery.header'|trans }}</h2>
                                <span class="mu-title-dot"></span>
                                <p>{{ 'galery.description'|trans }}</p>
                            </div>


                            <!-- Start Galery Content -->
                            <div class="mu-apps-screenshot-content">

                                <div class="mu-apps-screenshot-slider">

                                    {% for i in 1..4 %}
                                        <div class="mu-single-screeshot">
                                            <img src="{{ asset('assets/images/screenshot/0'~i~'.jpg') }}"
                                                 alt="App screenshot img">
                                        </div>
                                    {% endfor %}

                                </div>

                            </div>
                            <!-- End Galery Content -->

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Galery -->

        <!-- Start Description -->
        <section id="mu-download">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-download-area">

                            <div class="mu-title-area">
                                <h2 class="mu-title">{{ 'description.header'|trans }}</h2>
                                <span class="mu-title-dot"></span>
                                <p>{{ 'description.description'|trans }}</p>
                            </div>


                            <div class="mu-download-content">
                                <a class="mu-apple-btn scroll-to-order" href="#">
                                    <div class="fa "></div>
                                    <span>{{ 'order'|trans }}</span></a>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Description -->


        <!-- START Opinions -->
        <div id="mu-opinions">
            <div class="container">
                <div class="row ">
                    <div>
                        <div id="mu-opinions-block" class="mu-title-area" style="padding-top:70px">
                            <h2 class="mu-title">{{ 'opinions.header'|trans }}</h2>
                            <span class="mu-title-dot"></span>
                            <p>{{ 'opinions.description'|trans }}</p>
                        </div>
                    </div>
                    <br>
                    <br>
                    <div>

                        <div class="opinions" style="margin-top:50px;">
                            {% for i in 1..3 %}
                                <div>
                                    <img class="opinion-image"
                                         src="{{ asset('assets/images/opinions/0'~i~'.png') }}">
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END Opinions -->

        <!-- Start FAQ -->
        <section id="mu-faq">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-faq-area">

                            <div class="mu-title-area">
                                <h2 class="mu-title">FAQ</h2>
                                <span class="mu-title-dot"></span>
                            </div>


                            <div class="mu-faq-content">

                                <div class="panel-group" id="accordion">
                                    {% for i in 1..5 %}
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h4 class="panel-title">
                                                    <a data-toggle="collapse" data-parent="#accordion"
                                                       href="#collapse{{ i }}">
                                                        <span class="fa fa-plus"></span>{{ ('faq.'~i~'.header')|trans|raw }}
                                                    </a>
                                                </h4>
                                            </div>
                                            <div id="collapse{{ i }}" class="panel-collapse collapse ">
                                                <div class="panel-body">
                                                    {{ ('faq.'~i~'.answer')|trans|raw }}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End FAQ -->


        <!-- Start Contact -->
        <section id="mu-contact">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-contact-area">

                            <div class="mu-title-area">
                                <h2 class="mu-heading-title">{{ 'contact'|trans }}</h2>
                                <span class="mu-title-dot"></span>
                                <p>{{ 'contact.description'|trans }}</p>
                            </div>


                            <!-- Start Contact Content -->
                            <div class="mu-contact-content">
                                <div class="row">

                                    <div class="col-md-7">
                                        <div class="mu-contact-left">
                                            <div id="form-messages"></div>
                                            <form
                                                    id="ajax-contact"
                                                    method="post" action="{{ path('ordering_message_ajax') }}"
                                                    class="mu-contact-form">
                                                <div class="form-group">
                                                    <input type="text" class="form-control"
                                                           placeholder="{{ 'name'|trans }}" id="name"
                                                           name="name" required>
                                                </div>
                                                <div class="form-group">
                                                    <input type="email" class="form-control"
                                                           placeholder="{{ 'email'|trans }}"
                                                           id="email" name="email" required>
                                                </div>
                                                <div class="form-group">
                                                    <textarea class="form-control" placeholder="{{ 'message'|trans }}"
                                                              id="message"
                                                              name="message" required></textarea>
                                                </div>
                                                <button type="submit" class="mu-send-msg-btn">
                                                    <span>{{ 'send'|trans }}</span>
                                                </button>
                                            </form>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <div class="mu-contact-right">
                                            <div class="mu-contact-right-single">
                                                <div class="mu-icon"><i class="fa fa-map-marker"></i></div>
                                                <p><strong>{{ 'location'|trans }}</strong></p>
                                                <p>{{ 'location.description'|trans }}</p>
                                            </div>

                                            <div class="mu-contact-right-single">
                                                <div class="mu-icon"><i class="fa fa-phone"></i></div>
                                                <p><strong>{{ 'phone'|trans }}</strong></p>
                                                <p>{{ 'phone.number1'|trans }}</p>
                                                {#<p>{{ 'phone.number2'|trans }}</p>#}
                                            </div>

                                            <div class="mu-contact-right-single">
                                                <div class="mu-icon"><i class="fa fa-envelope"></i></div>
                                                <p><strong>{{ 'email'|trans }}</strong></p>
                                                <p>{{ 'email1'|trans }}</p>
                                                {#<p>{{ 'email2'|trans }}</p>#}
                                            </div>

                                            <div class="mu-contact-right-single">
                                                <div class="mu-social-media">
                                                    <a href="{{ 'contact.facebook'|trans }}"><i
                                                                class="fa fa-facebook"></i></a>
                                                    <a href="{{ 'contact.instagram'|trans }}"><i
                                                                class="fa fa-instagram"></i></a>
                                                    {#<a href="#"><i class="fa fa-google-plus"></i></a>#}
                                                    {#<a href="#"><i class="fa fa-linkedin"></i></a>#}
                                                    {#<a href="#"><i class="fa fa-youtube"></i></a>#}
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- End Contact Content -->

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Contact -->

    </main>

    <!-- End main content -->


    <!-- Start footer -->
    <footer id="mu-footer" role="contentinfo">
        {#<div class="container">#}
        <div class="mu-footer-area">
            <p class="mu-copy-right">&copy; Copyright <a rel="nofollow" href="http://markups.io">markups.io</a>. All
                right reserved.</p>
        </div>
        {#</div>#}

    </footer>
    <!-- End footer -->


    <script>
        var locale = "{{ app.request.locale }}";
    </script>
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <!-- Bootstrap -->
    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    <!-- Slick slider -->
    <script type="text/javascript" src="{{ asset('assets/js/slick.min.js') }}"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/i18n/{{ app.request.locale }}.js"></script>

    <!-- Ajax contact form  -->
    <script type="text/javascript" src="{{ asset('assets/js/app.js') }}"></script>



    <!-- Custom js -->
    <script type="text/javascript" src="{{ asset('assets/js/custom.js') }}"></script>



{% endblock %}

