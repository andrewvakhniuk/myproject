<html>
<head>

</head>
<body>
<br>
<h1>Order details</h1>
<br>
<table class="table">
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ ordering.id }}</td>
    </tr>
    <tr>
        <th>Date</th>
        <td>{% if ordering.date %}{{ ordering.date|date('Y-m-d H:i:s') }}{% endif %}</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>{{ ordering.name }} {{ ordering.surname }}</td>
    </tr>

    <tr>
        <th>Phone</th>
        <td>{{ ordering.phone }}</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>{{ ordering.email }}</td>
    </tr>
    <tr>
        <th>City</th>
        <td>{{ ordering.city }}</td>
    </tr>
    <tr>
        <th>Post office</th>
        <td>{{ ordering.postOffice }}</td>
    </tr>
    <tr>

        <th>Status</th>
        <td>{{ ordering.status }}</td>
    </tr>
    <tr>
        <th>Payed</th>
        <td>{{ ordering.payed }}</td>
    </tr>
    <tr>
        <th>Quantity</th>
        <td>{{ ordering.quantity }}</td>
    </tr>
    <tr>
        <th>{{ 'price'|trans }}</th>
        <td>{{ ordering.price }}</td>
    </tr>
    <tr>
        <th>Delivery type</th>
        <td>{{ ordering.deliveryType }}</td>
    </tr>
    <tr>
        <th>Payment method</th>
        <td>{{ ordering.paymentMethod }}</td>
    </tr>
    <tr>
        <th>Ip address</th>
        <td>{{ ordering.ipAddress }}</td>
    </tr>

    </tbody>
</table>
</body>
</html>
